{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:monthly"
  ],
  "baseBranches": ["develop"],
  "packageRules": [
    {
      "description": "Disable Android Gradle plugin updates",
      "matchPackageNames": [
        "com.android.tools.build:gradle",
        "com.android.tools.build:gradle-api"
      ],
      "enabled": false
    },
    {
      "description": "Quarterly updates for app/**",
      "matchPaths": ["app/**"],
      "extends": ["schedule:quarterly"]
    }
  ]
}

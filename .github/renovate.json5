{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["develop"],

  // Global schedule â€” run Renovate monthly
  "schedule": ["monthly"],

  "packageRules": [
    // Exclude updates for Gradle build tools
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle",
        "com.android.tools.build:gradle-api"
      ],
      "enabled": false
    },

    // Apply quarterly update schedule for app module dependencies
    {
      "matchPaths": ["app/**"],
      "schedule": ["quarterly"]
    }
  ]
}